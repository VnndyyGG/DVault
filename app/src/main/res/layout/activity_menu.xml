<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E2940"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <!-- Logo D’VAULT -->
    <TextView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:letterSpacing="0.06"
        android:text="D’VAULT"
        android:textAllCaps="true"
        android:textColor="#F5EFE6"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Imagen central -->

    <!-- Contenedor de botones -->

    <!-- Footer -->
    <ImageView
        android:id="@+id/imagenMenu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="108dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_store"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <LinearLayout
        android:id="@+id/menu_container"
        android:layout_width="145dp"
        android:layout_height="116dp"
        android:layout_marginTop="196dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagenMenu"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnComprar"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="131dp"
            android:layout_height="38dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="#6C00FF"
            android:text="Comprar"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_cart"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#FFFFFF"
            app:strokeWidth="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBuscar"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="130dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#6C00FF"
            android:text="Buscar"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_search"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#FFFFFF"
            app:strokeWidth="0dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="148dp"
        android:layout_height="102dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="499dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVender"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="135dp"
            android:layout_height="36dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="#6C00FF"
            android:text="Vender"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_sell"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#FFFFFF"
            app:strokeWidth="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnListar"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="135dp"
            android:layout_height="36dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="#6C00FF"
            android:text="Listar"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_list"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#FFFFFF"
            app:strokeWidth="0dp" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSalir"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#C42B2B"
        android:text="Salir"
        android:textColor="#0E2940"
        android:textSize="13sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_exit"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="#0E2940"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeWidth="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>