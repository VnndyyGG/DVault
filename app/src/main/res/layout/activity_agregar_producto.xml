<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A1929"
    tools:context=".AgregarProductoActivity">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Volver"
            android:src="?attr/homeAsUpIndicator"
            app:tint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvScreenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:letterSpacing="0.1"
            android:text="PUBLICAR PRODUCTO"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Contenido desplazable -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sección: Información básica -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Nombre del Producto"
                android:textColor="#C7D3DA"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/inputNombreProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="#D4AF37"
                android:hint="Ej: Polera Blanca Básica"
                android:inputType="textCapWords"
                android:paddingBottom="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#4A5A64" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Marca"
                android:textColor="#C7D3DA"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/inputMarca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="#D4AF37"
                android:hint="Ej: Gucci"
                android:inputType="textCapWords"
                android:paddingBottom="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#4A5A64" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Descripción"
                android:textColor="#C7D3DA"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/inputDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="#D4AF37"
                android:gravity="top"
                android:hint="Talla, color, condición, etc."
                android:inputType="textMultiLine"
                android:minLines="3"
                android:paddingBottom="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#4A5A64" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Precio (CLP)"
                android:textColor="#C7D3DA"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/inputPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="#D4AF37"
                android:hint="Ej: 25000"
                android:inputType="numberDecimal"
                android:paddingBottom="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#4A5A64" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Stock (Cantidad disponible)"
                android:textColor="#C7D3DA"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/inputStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="#D4AF37"
                android:hint="Ej: 1"
                android:inputType="number"
                android:paddingBottom="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#4A5A64" />

            <!-- Sección: Fotos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Fotos del Producto (hasta 6)"
                android:textColor="#C7D3DA"
                android:textSize="14sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:background="#0F3246"
                android:scrollbars="none"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">

                <LinearLayout
                    android:id="@+id/llMiniaturasContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <ImageView
                        android:id="@+id/placeholderImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="8dp"
                        android:background="#1A2A3A"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_gallery" />
                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/btnAnadirFoto"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_secondary"
                android:text="AÑADIR MÁS FOTOS"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Botón de acción -->
            <Button
                android:id="@+id/btnPublicar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_primary"
                android:text="PUBLICAR PRODUCTO"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>