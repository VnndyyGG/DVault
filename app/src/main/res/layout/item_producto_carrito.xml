<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#0F3246"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/ivProductoImagen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#1A2A3A"
            android:scaleType="centerCrop"
            android:src="@drawable/producto_placeholder" />

        <!-- Información principal -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMarcaProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D4AF37"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="GUCCI" />

            <TextView
                android:id="@+id/tvNombreProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Riñonera de Cuero"
                android:textColor="#C7D3DA"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvVendedorProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Vendedor: nombre"
                android:textColor="#7E98A6"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Cantidad: 1"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Precio y acciones -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPrecioProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="$341" />

            <ImageButton
                android:id="@+id/btnEliminar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar producto"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="#EF5350" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>