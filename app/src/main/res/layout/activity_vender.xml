<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A1929"
    tools:context=".VenderActivity">

    <!-- Botón retroceder -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle_outline"
        android:contentDescription="Volver"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@android:drawable/ic_menu_revert"
        android:tint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/tvScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="serif"
        android:letterSpacing="0.1"
        android:text="VENDER PRODUCTO"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:alpha="0.8"
        android:letterSpacing="0.3"
        android:text="D'Vault"
        android:textColor="#D4AF37"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvScreenTitle" />

    <!-- ScrollView con formulario -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toTopOf="@id/btnSalir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Campo Marca -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"
                android:text="Marca"
                android:textColor="#C7D3DA"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cardBackgroundColor="#0F3246"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <EditText
                    android:id="@+id/inputMarca"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Ej: Gucci, Nike, Supreme..."
                    android:inputType="textCapWords"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#7E98A6"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>

            <!-- Campo Nombre del Producto -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="Nombre del producto"
                android:textColor="#C7D3DA"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cardBackgroundColor="#0F3246"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <EditText
                    android:id="@+id/inputNombre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Ej: Camisa de lino blanca"
                    android:inputType="textCapWords"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#7E98A6"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>

            <!-- Campo Descripción -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="Descripción"
                android:textColor="#C7D3DA"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#0F3246"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <EditText
                    android:id="@+id/inputDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="top|start"
                    android:hint="Ej: Talla M, poco uso, perfecto estado..."
                    android:inputType="textMultiLine|textCapSentences"
                    android:minHeight="120dp"
                    android:padding="20dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#7E98A6"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>

            <!-- Campo Precio -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="Precio (CLP)"
                android:textColor="#C7D3DA"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cardBackgroundColor="#0F3246"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <EditText
                    android:id="@+id/inputPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="$ 0"
                    android:inputType="numberDecimal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#7E98A6"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>

            <!-- Sección de fotos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="4dp"
                android:text="Fotos del producto (toca para agregar)"
                android:textColor="#C7D3DA"
                android:textSize="14sp" />

            <!-- Contenedor de miniaturas de fotos - CLICKEABLE -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardFotosContainer"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#0F3246"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/containerFotos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Placeholder inicial con ícono de cámara -->
                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginEnd="8dp"
                            android:background="#1A2A3A"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@android:drawable/ic_menu_camera"
                                android:tint="#7E98A6" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Añadir"
                                android:textColor="#7E98A6"
                                android:textSize="11sp" />
                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>
            </androidx.cardview.widget.CardView>

            <!-- Botón Publicar -->
            <Button
                android:id="@+id/btnPublicar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/btn_primary"
                android:text="PUBLICAR ARTÍCULO"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <!-- Botón Salir -->
    <Button
        android:id="@+id/btnSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_exit"
        android:letterSpacing="0.1"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="SALIR"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>