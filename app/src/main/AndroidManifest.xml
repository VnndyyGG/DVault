<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dvault">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DVault">

        <!-- MainActivity (Login) como pantalla inicial -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MenÃº principal -->
        <activity android:name=".MenuActivity" />

        <!-- Registro -->
        <activity android:name=".RegistroActivity" />

        <!-- Funcionalidades -->
        <activity android:name=".ComprarActivity" />
        <activity android:name=".VenderActivity" />
        <activity android:name=".BuscarActivity" />
        <activity android:name=".ListarActivity" />
        <activity android:name=".CarritoActivity"/>

    </application>

</manifest>